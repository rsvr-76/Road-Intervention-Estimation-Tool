# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Application environment (development, production, staging)
APP_ENV=development

# Enable debug mode (true/false)
DEBUG=true

# Application port
PORT=8000

# Application host
HOST=0.0.0.0

# Secret key for sessions and security (generate a secure random string)
SECRET_KEY=your-secret-key-here-change-in-production

# ==============================================
# GOOGLE GEMINI AI SETTINGS
# ==============================================

# Google Gemini API key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini model name (e.g., gemini-1.5-pro, gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# Maximum tokens for Gemini responses
GEMINI_MAX_TOKENS=8192

# Temperature for response generation (0.0 to 1.0)
GEMINI_TEMPERATURE=0.7

# ==============================================
# MONGODB DATABASE SETTINGS
# ==============================================

# MongoDB connection URL
# Format: mongodb://username:password@host:port/database
# For local: mongodb://localhost:27017/brakes_estimator
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URL=mongodb://localhost:27017/brakes_estimator

# MongoDB database name
MONGODB_DB_NAME=brakes_estimator

# MongoDB connection pool settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1

# ==============================================
# REDIS CACHE SETTINGS
# ==============================================

# Redis connection URL
# Format: redis://[:password@]host:port[/database]
# For local: redis://localhost:6379/0
# For cloud: redis://:password@host:port/0
REDIS_URL=redis://localhost:6379/0

# Redis cache expiration time (in seconds)
REDIS_CACHE_TTL=3600

# Redis key prefix for this application
REDIS_KEY_PREFIX=brakes_estimator:

# ==============================================
# SENTRY ERROR MONITORING
# ==============================================

# Sentry DSN for error tracking (get from https://sentry.io)
# Leave empty to disable Sentry
SENTRY_DSN=

# Sentry environment name
SENTRY_ENVIRONMENT=development

# Sentry traces sample rate (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==============================================
# CPWD (Central Public Works Department) SETTINGS
# ==============================================

# CPWD API base URL
CPWD_API_URL=https://api.cpwd.gov.in/v1

# CPWD API key for authentication
CPWD_API_KEY=your-cpwd-api-key-here

# CPWD data refresh interval (in hours)
CPWD_REFRESH_INTERVAL=24

# CPWD rates version/year
CPWD_RATES_YEAR=2024

# ==============================================
# GeM (Government e-Marketplace) SETTINGS
# ==============================================

# GeM API base URL
GEM_API_URL=https://api.gem.gov.in/v1

# GeM API key for authentication
GEM_API_KEY=your-gem-api-key-here

# GeM API secret for authentication
GEM_API_SECRET=your-gem-api-secret-here

# GeM data refresh interval (in hours)
GEM_REFRESH_INTERVAL=24

# GeM organization ID
GEM_ORG_ID=your-organization-id

# ==============================================
# FILE UPLOAD SETTINGS
# ==============================================

# Maximum file upload size (in bytes) - 10MB default
MAX_UPLOAD_SIZE=10485760

# Allowed file extensions for upload (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.jpg,.jpeg,.png

# Upload directory path
UPLOAD_DIR=./uploads

# ==============================================
# CORS SETTINGS
# ==============================================

# Allowed CORS origins (comma-separated)
# Use * for all origins in development (not recommended for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================
# LOGGING SETTINGS
# ==============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# Enable log rotation (true/false)
LOG_ROTATION=true
